<h2><%= @list.name%></h2>
<% @bookmarks.each do |bookmark| %>
  <p><%= bookmark.movie.title %>: <%= bookmark.comment %></p>
  <div>
    <%= link_to bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-warning" do %>
      <p>Delete this bookmark</p>
    <% end %>
  </div>
<% end %>
